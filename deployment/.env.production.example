# Production Environment Configuration for MCP Servers
# Copy this to .env and modify values for your environment

# =============================================================================
# Wazuh Manager Configuration
# =============================================================================
WAZUH_MANAGER_URL=https://your-wazuh-manager:55000
WAZUH_MANAGER_USERNAME=admin
WAZUH_MANAGER_PASSWORD=admin
WAZUH_MANAGER_VERIFY_SSL=false
WAZUH_MANAGER_PORT=8002

# =============================================================================
# Wazuh Indexer Configuration  
# =============================================================================
WAZUH_INDEXER_URL=https://your-wazuh-indexer:9200
WAZUH_INDEXER_USERNAME=admin
WAZUH_INDEXER_PASSWORD=admin
WAZUH_INDEXER_VERIFY_SSL=false
WAZUH_INDEXER_PORT=8001

# =============================================================================
# AI Services (Optional)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=your-azure-endpoint

# =============================================================================
# Application Settings
# =============================================================================
PYTHONPATH=/app
LOCAL_MODE=false
AI_ENABLED=true

# =============================================================================
# Logging and Performance
# =============================================================================
LOG_LEVEL=INFO
UVICORN_WORKERS=2
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5
